  .cta-btn:hover { background: #0056b3; text-decoration: none; }
  
  .post-footer { margin-top: 3rem; padding-top: 2rem; border-top: 1px solid #e9ecef; }
  .author-bio { background: #f8f9fa; padding: 1.5rem; border-radius: 6px; margin-bottom: 2rem; }
  .author-bio h3 { margin-top: 0; }
  
  .related-tools { text-align: center; }
