---
// components/Footer.astro
---
<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-section">
      <div class="newsletter-signup">
        <h3>stay in the remote work loop</h3>
        <p>get 5-10 hand-picked beginner-friendly remote jobs + actionable remote work tips delivered weekly</p>
        
        <form
          action="https://buttondown.com/api/emails/embed-subscribe/remotelyyou"
          method="post"
          target="popupwindow"
          onsubmit="window.open('https://buttondown.com/remotelyyou', 'popupwindow')"
          class="newsletter-form"
        >
          <div class="form-group">
            <input 
              type="email" 
              name="email" 
              id="newsletter-email" 
              placeholder="your email address"
              required 
              class="form-input"
            />
            <button type="submit" class="btn btn--secondary">subscribe free</button>
          </div>
          <p class="newsletter-note">no spam, unsubscribe anytime. join 2,000+ readers.</p>
        </form>
      </div>
    </div>

    <div class="footer-links">
      <div class="footer-column">
        <h4>explore</h4>
        <ul>
          <li><a href="/">home</a></li>
          <li><a href="/jobs">remote jobs</a></li>
          <li><a href="/course">free course</a></li>
          <li><a href="/resources">resources</a></li>
          <li><a href="/blog">blog</a></li>
        </ul>
      </div>
      
      <div class="footer-column">
        <h4>connect</h4>
        <ul>
          <li><a href="/contact">contact us</a></li>
          <li><a href="mailto:hello@remotelyyou.co">hello@remotelyyou.co</a></li>
          <li><a href="https://twitter.com/remotelyyou" target="_blank" rel="noopener">twitter</a></li>
          <li><a href="https://linkedin.com/company/remotelyyou" target="_blank" rel="noopener">linkedin</a></li>
        </ul>
      </div>
      
      <div class="footer-column">
        <h4>legal</h4>
        <ul>
          <li><a href="/privacy">privacy policy</a></li>
          <li><a href="/terms">terms of service</a></li>
          <li><a href="/disclaimer">disclaimer</a></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="footer-bottom-content">
      <p>&copy; 2025 remotelyyou. helping you work from anywhere.</p>
      <p class="powered-by">
        <a href="https://buttondown.com/refer/remotelyyou" target="_blank" rel="noopener">newsletter by buttondown</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--color-gray-900);
    color: var(--color-gray-300);
    margin-top: var(--space-16);
    padding: var(--space-16) 0 var(--space-8);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-5);
  }

  /* Newsletter Signup */
  .newsletter-signup {
    background: linear-gradient(135deg, var(--color-teal-900) 0%, var(--color-gray-800) 100%);
    padding: var(--space-10);
    border-radius: var(--radius-xl);
    margin-bottom: var(--space-12);
    text-align: center;
    border: 2px solid var(--color-teal-800);
  }

  .newsletter-signup h3 {
    margin: 0 0 var(--space-3) 0;
    color: var(--color-white);
    font-size: var(--font-size-2xl);
    font-weight: 700;
  }

  .newsletter-signup p {
    margin: 0 0 var(--space-8) 0;
    color: var(--color-gray-300);
    font-size: var(--font-size-lg);
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .newsletter-form .form-group {
    display: flex;
    gap: var(--space-3);
    max-width: 400px;
    margin: 0 auto var(--space-3);
  }

  .newsletter-form .form-input {
    flex: 1;
    padding: var(--space-4) var(--space-4);
    border: 2px solid var(--color-gray-600);
    border-radius: var(--radius-md);
    background: var(--color-gray-800);
    color: var(--color-white);
    font-size: var(--font-size-base);
    font-family: var(--font-family);
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .newsletter-form .form-input:focus {
    outline: none;
    border-color: var(--color-teal-400);
    box-shadow: 0 0 0 3px rgba(20, 184, 166, 0.1);
  }

  .newsletter-form .form-input::placeholder {
    color: var(--color-gray-400);
  }

  .newsletter-form .btn {
    padding: var(--space-4) var(--space-6);
    background: var(--color-secondary);
    color: var(--color-white);
    border: none;
    border-radius: var(--radius-md);
    font-size: var(--font-size-base);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    font-family: var(--font-family);
    text-transform: lowercase;
  }

  .newsletter-form .btn:hover {
    background: var(--color-teal-700);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .newsletter-note {
    font-size: var(--font-size-sm);
    color: var(--color-gray-400);
    margin: 0;
    font-style: italic;
  }

  /* Footer Links */
  .footer-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-10);
    margin-bottom: var(--space-10);
  }

  .footer-column h4 {
    margin: 0 0 var(--space-4) 0;
    color: var(--color-white);
    font-size: var(--font-size-lg);
    font-weight: 600;
    text-transform: lowercase;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-column li {
    margin-bottom: var(--space-2);
  }

  .footer-column a {
    color: var(--color-gray-400);
    text-decoration: none;
    font-size: var(--font-size-base);
    transition: color 0.2s ease;
    display: inline-block;
    padding: var(--space-1) 0;
  }

  .footer-column a:hover {
    color: var(--color-teal-300);
    transform: translateX(2px);
  }

  /* Footer Bottom */
  .footer-bottom {
    border-top: 1px solid var(--color-gray-700);
    padding-top: var(--space-6);
  }

  .footer-bottom-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-5);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-3);
  }

  .footer-bottom p {
    margin: 0;
    font-size: var(--font-size-sm);
    color: var(--color-gray-500);
  }

  .powered-by a {
    color: var(--color-gray-500);
    text-decoration: none;
    font-size: var(--font-size-sm);
    transition: color 0.2s ease;
  }

  .powered-by a:hover {
    color: var(--color-gray-300);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .site-footer {
      padding: var(--space-12) 0 var(--space-6);
    }

    .newsletter-signup {
      padding: var(--space-8) var(--space-5);
      margin-bottom: var(--space-10);
    }

    .newsletter-signup h3 {
      font-size: var(--font-size-xl);
    }

    .newsletter-signup p {
      font-size: var(--font-size-base);
    }

    .newsletter-form .form-group {
      flex-direction: column;
      max-width: 100%;
    }

    .newsletter-form .btn {
      padding: var(--space-3) var(--space-5);
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-8);
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: var(--space-2);
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .newsletter-signup {
      padding: var(--space-6) var(--space-4);
    }

    .footer-content {
      padding: 0 var(--space-4);
    }

    .footer-bottom-content {
      padding: 0 var(--space-4);
    }
  }
</style>