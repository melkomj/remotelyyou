      height: 4px;
      background: var(--color-gray-200);
      border-radius: 2px;
      overflow: hidden;
    }
    
    .kit-topnav__bar{
      height: 100%;
      width: 0%;
      background: linear-gradient(90deg, var(--color-teal-500), var(--color-coral-500));
      transition: width .2s ease-out;
    }

    /* Hero */
    .hero {
      text-align: center;
      margin-bottom: var(--space-10);
      padding: var(--space-10) 0;
      background: linear-gradient(135deg, var(--color-sand-50) 0%, var(--color-teal-50) 100%);
      border-radius: var(--radius-xl);
    }

    .hero h1 {
      margin-bottom: var(--space-4);
      background: linear-gradient(135deg, var(--color-black) 0%, var(--color-teal-700) 100%);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .hero .lead {
      max-width: 600px;
      margin: 0 auto var(--space-6) auto;
    }

    .hero-cta {
      display: flex;
      justify-content: center;
      gap: var(--space-3);
      flex-wrap: wrap;
    }

    /* Common section styling */
    .brief{ 
      scroll-margin-top: calc(var(--nav-offset) + var(--space-4)); 
    }

    .section-header {
      text-align: center;
      margin-bottom: var(--space-8);
    }

    .section-description {
      font-size: var(--font-size-lg);
      color: var(--color-gray-600);
      max-width: 600px;
      margin: 0 auto;
    }

    /* Quick Start */
    .quick-start {
      background: var(--color-teal-50);
      border-left: 4px solid var(--color-teal-500);
    }

    .quick-start-steps {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--space-4);
      margin-top: var(--space-6);
    }

    .step {
      background: var(--color-white);
      padding: var(--space-5);
      border-radius: var(--radius-lg);
      border-left: 3px solid var(--color-teal-400);
    }

    .step-number {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 24px;
      height: 24px;
      background: var(--color-teal-500);
      color: white;
      border-radius: 50%;
      font-size: var(--font-size-xs);
      font-weight: 600;
