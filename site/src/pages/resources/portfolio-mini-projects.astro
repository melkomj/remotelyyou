---
import BaseLayout from "../../layouts/BaseLayout.astro";
const title = "portfolio mini-projects (proof without experience)";
const description = "four one-pagers you can complete this weekend to create job-ready proof for customer support, admin/ops, project assistant, and marketing assistant roles.";
---

<BaseLayout {title} {description}>

<!-- Navigation -->
<nav class="kit-topnav" aria-label="mini-project navigation">
  <div class="kit-topnav__inner">
    <a href="/resources" class="kit-topnav__back">← back to resources</a>
    <ul class="kit-topnav__list" role="tablist">
      <li><a role="tab" class="kit-topnav__link is-active" href="#overview">overview</a></li>
      <li><a role="tab" class="kit-topnav__link" href="#customer-support">customer support</a></li>
      <li><a role="tab" class="kit-topnav__link" href="#admin-ops">admin / ops</a></li>
      <li><a role="tab" class="kit-topnav__link" href="#project-assistant">project assistant</a></li>
