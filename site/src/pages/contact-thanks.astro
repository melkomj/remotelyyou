---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Thank You - Message Sent">
  <main class="container">
    <section class="thanks-hero">
      <h1>Thanks for Your Message!</h1>
      <p class="lead">I've received your message and will get back to you within 24 hours.</p>
      <a href="/jobs" class="btn btn-primary">Browse Remote Jobs</a>
    </section>

    <div class="thanks-affiliate">
      <h2>While You Wait, Check These Out:</h2>
      <div class="thanks-tools">
        <a href="https://huntr.co/?utm_source=remote-jobs-site&utm_campaign=thanks_page" target="_blank" rel="noopener noreferrer" class="thanks-tool">
          <h3>Track Your Job Applications</h3>
          <p>Organize your job search with Huntr</p>
        </a>
        
        <a href="https://zety.com/?utm_source=remote-jobs-site&utm_campaign=thanks_page" target="_blank" rel="noopener noreferrer" class="thanks-tool">
          <h3>Build Your Resume</h3>
          <p>Create a professional resume with Zety</p>
        </a>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .container { max-width: 800px; margin: 0 auto; padding: 2rem; }
  .thanks-hero { text-align: center; margin-bottom: 3rem; }
  .thanks-hero h1 { font-size: 2.5rem; margin-bottom: 1rem; color: #28a745; }
  .lead { font-size: 1.2rem; color: #666; margin-bottom: 2rem; }
  .btn { display: inline-block; padding: 1rem 2rem; background: #007bff; color: white; text-decoration: none; border-radius: 5px; font-weight: bold; }
  .btn:hover { background: #0056b3; text-decoration: none; }
  .thanks-affiliate { background: #f8f9fa; padding: 2rem; border-radius: 8px; text-align: center; }
  .thanks-tools { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem; margin-top: 1.5rem; }
  .thanks-tool { background: white; border: 1px solid #e9ecef; padding: 1.5rem; border-radius: 6px; text-decoration: none; color: #333; transition: transform 0.2s; }
  .thanks-tool:hover { transform: translateY(-2px); text-decoration: none; }
  .thanks-tool h3 { margin-top: 0; color: #007bff; }
</style>
