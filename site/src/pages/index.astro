<script>
  // PDF Download Handler
  function handlePDFDownload() {
    const messageEl = document.getElementById('pdfMessage');
    if (messageEl) {
      messageEl.textContent = '🎉 Success! Check your email and download your PDF guide below:';
      messageEl.className = 'form-message success';
    }
    
    setTimeout(() => {
      window.open('/pdf/remote-job-jumpstart-kit.html', '_blank');
    }, 1000);
    
    return true;
  }

  // Newsletter Signup Handler
  function handleNewsletterSignup() {
    const messageEl = document.getElementById('newsletterMessage');
    if (messageEl) {
      messageEl.textContent = '🎉 Welcome to early access! You\'ll receive weekly remote job updates.';
      messageEl.className = 'form-message success';
    }
    
    return true;
  }

  // Sticky email bar functionality
  let stickyBar = document.getElementById('stickyBar');
  let closeBtn = document.getElementById('closeSticky');
  let scrollTimer = null;
  let isBarDismissed = localStorage.getItem('emailBarDismissed') === 'true';

  function showStickyBar() {
    if (!isBarDismissed && window.scrollY > 500) {
      stickyBar?.classList.add('show');
    }
  }

  function hideStickyBar() {
    stickyBar?.classList.remove('show');
  }

  window.addEventListener('scroll', () => {
    if (scrollTimer) {
      clearTimeout(scrollTimer);
    }
    scrollTimer = setTimeout(showStickyBar, 100);
  });

  closeBtn?.addEventListener('click', () => {
    hideStickyBar();
    localStorage.setItem('emailBarDismissed', 'true');
    isBarDismissed = true;
  });

  document.querySelectorAll('a[href*="jumpstart-kit"]').forEach(link => {
    link.addEventListener('click', () => {
      hideStickyBar();
    });
  });
</script>