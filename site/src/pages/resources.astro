<style>
  .resources {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-5);
  }

  /* Hero Section */
  .hero {
    text-align: center;
    padding: var(--space-16) 0 var(--space-12);
    background: linear-gradient(135deg, var(--color-teal-50) 0%, var(--color-coral-50) 100%);
    border-radius: var(--radius-xl);
    margin-bottom: var(--space-12);
  }

  .hero h1 {
    font-size: var(--font-size-4xl);
    font-weight: 900;
    color: var(--color-black);
    margin-bottom: var(--space-3);
  }

  .hero-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-gray-600);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Featured Resource */
  .featured-resource {
    margin-bottom: var(--space-16);
  }

  .featured-card {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-8);
    align-items: center;
    background: var(--color-white);
    border: 3px solid var(--color-teal-200);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    position: relative;
    overflow: hidden;
  }

  .featured-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-teal-500), var(--color-coral-500));
  }

  .featured-badge {
    display: inline-block;
    background: var(--color-coral-100);
    color: var(--color-coral-700);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }

  .featured-card h2 {
    font-size: var(--font-size-2xl);
    font-weight: 800;
    color: var(--color-black);
    margin-bottom: var(--space-3);
  }

  .featured-card p {
    color: var(--color-gray-600);
    margin-bottom: var(--space-6);
    line-height: 1.6;
  }

  .featured-highlights {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
  }

  .highlight {
    font-size: var(--font-size-sm);
    color: var(--color-gray-700);
    font-weight: 500;
  }

  /* Featured Visual */
  .featured-visual {
    position: relative;
    height: 200px;
  }

  .preview-cards {
    position: relative;
    height: 100%;
  }

  .preview-card {
    position: absolute;
    background: var(--color-white);
    border: 2px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-3) var(--space-4);
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-gray-700);
    box-shadow: var(--shadow-sm);
  }

  .preview-card.card-1 {
    top: 0;
    left: 0;
    transform: rotate(-5deg);
    border-color: var(--color-teal-200);
  }

  .preview-card.card-2 {
    top: 50px;
    right: 20px;
    transform: rotate(3deg);
    border-color: var(--color-coral-200);
  }

  .preview-card.card-3 {
    bottom: 0;
    left: 30px;
    transform: rotate(-2deg);
    border-color: var(--color-sand-200);
  }

  /* Resources Grid */
  .resources-grid {
    margin-bottom: var(--space-16);
  }

  .section-title {
    text-align: center;
    font-size: var(--font-size-2xl);
    font-weight: 800;
    color: var(--color-black);
    margin-bottom: var(--space-8);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
  }

  /* Resource Cards */
  .resource-card {
    background: var(--color-white);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    position: relative;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .resource-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .card-teal {
    border-color: var(--color-teal-200);
    background: linear-gradient(135deg, var(--color-white) 0%, var(--color-teal-25) 100%);
  }

  .card-teal:hover {
    box-shadow: 0 20px 40px var(--color-teal-200);
  }

  .card-coral {
    border-color: var(--color-coral-200);
    background: linear-gradient(135deg, var(--color-white) 0%, var(--color-coral-25) 100%);
  }

  .card-coral:hover {
    box-shadow: 0 20px 40px var(--color-coral-200);
  }

  .card-sand {
    border-color: var(--color-sand-200);
    background: linear-gradient(135deg, var(--color-white) 0%, var(--color-sand-25) 100%);
  }

  .card-sand:hover {
    box-shadow: 0 20px 40px var(--color-sand-200);
  }

  .card-blue {
    border-color: var(--color-primary-200);
    background: linear-gradient(135deg, var(--color-white) 0%, var(--color-primary-25) 100%);
  }

  .card-blue:hover {
    box-shadow: 0 20px 40px rgba(20, 184, 166, 0.2);
  }

  .card-purple {
    border-color: #e9d5ff;
    background: linear-gradient(135deg, var(--color-white) 0%, #faf5ff 100%);
  }

  .card-purple:hover {
    box-shadow: 0 20px 40px rgba(139, 92, 246, 0.2);
  }

  .coming-soon {
    opacity: 0.7;
  }

  .coming-soon:hover {
    transform: none;
    box-shadow: none;
  }

  .card-icon {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--space-4);
    display: block;
  }

  .resource-card h3 {
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--color-black);
    margin-bottom: var(--space-3);
  }

  .resource-card p {
    color: var(--color-gray-600);
    margin-bottom: var(--space-4);
    line-height: 1.5;
  }

  .card-features {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    margin-bottom: var(--space-6);
  }

  .card-features span {
    font-size: var(--font-size-sm);
    color: var(--color-gray-700);
  }

  .card-btn {
    display: inline-block;
    color: var(--color-primary-600);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--font-size-sm);
    transition: all 0.2s ease;
  }

  .card-btn:hover {
    color: var(--color-primary-700);
    transform: translateX(4px);
  }

  .card-btn.disabled {
    color: var(--color-gray-400);
    cursor: not-allowed;
  }

  .card-btn.disabled:hover {
    transform: none;
  }

  /* Bottom CTA */
  .bottom-cta {
    text-align: center;
    background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-secondary-600) 100%);
    color: var(--color-white);
    padding: var(--space-12);
    border-radius: var(--radius-xl);
    margin-bottom: var(--space-12);
  }

  .bottom-cta h2 {
    font-size: var(--font-size-2xl);
    font-weight: 800;
    margin-bottom: var(--space-4);
  }

  .bottom-cta p {
    font-size: var(--font-size-lg);
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto var(--space-6);
  }

  .btn--large {
    padding: var(--space-4) var(--space-8);
    font-size: var(--font-size-lg);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .featured-card {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .featured-highlights {
      grid-template-columns: 1fr;
    }

    .preview-cards {
      height: 120px;
    }

    .preview-card {
      font-size: var(--font-size-xs);
      padding: var(--space-2) var(--space-3);
    }

    .grid {
      grid-template-columns: 1fr;
    }

    .hero h1 {
      font-size: var(--font-size-2xl);
    }
  }
</style>